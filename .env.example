# EğitimYıldızı - Ortam Değişkenleri
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# ===== Uygulama Ayarları =====
NODE_ENV=development
PORT_FRONTEND=3000
PORT_API=5000

# ===== Veritabanı =====
DATABASE_URL=postgresql://postgres:password@localhost:5432/egitimyildizi
REDIS_URL=redis://localhost:6379

# ===== Kimlik Doğrulama =====
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this

# ===== OAuth (Sosyal Giriş) =====
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ===== Email (Bildirimler) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===== SMS (Bildirimler) =====
SMS_PROVIDER=netgsm
SMS_API_KEY=
SMS_SENDER=

# ===== Push Bildirimleri =====
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ===== Dosya Depolama =====
STORAGE_TYPE=local
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ===== Güvenlik =====
ENCRYPTION_KEY=your-32-char-encryption-key-here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===== Loglama =====
LOG_LEVEL=debug
